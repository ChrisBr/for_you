<% @brands.each do |brand| %>
    <div class="row">
      <div class="box">
        <div class="col-lg-12">
          <hr>
          <h2 class="intro-text text-center"><%= brand.name %></h2>
          <hr>
        </div>
        <div class="col-md-3">
          <img class="img-responsive img-border-left" src="<%= brand.logo.url %>" alt="">
        </div>
        <div class="col-md-9">
          <p><%= markdown(brand.description) %></p>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
<% end %>

<div class="text-center">
    <%= will_paginate @brands %>
</div>
