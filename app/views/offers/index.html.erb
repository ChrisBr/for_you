<% @offers.each do |offer| %>
    <div class="row">
      <div class="box">
        <div class="col-lg-12">
          <hr>
          <h2 class="intro-text text-center"><%= offer.title %></h2>
          <hr>
        </div>
        <% if offer.image_file_name %>
            <div class="col-md-3">
              <img class="img-responsive img-border-left" src="<%= offer.image.url %>" alt="">
            </div>
            <div class="col-md-9">
              <p><%= offer.content %></p>
            </div>
            <div class="clearfix"></div>
            </div>
        <% else %>
            <div class="col-md-12">
              <p><%= offer.content.html_safe %></p>
            </div>
            <div class="clearfix"></div>
            </div>
        <% end %>
    </div>
<% end %>
